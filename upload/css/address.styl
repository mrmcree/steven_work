@import "rider/initialize.styl"
initialize()
body,html
  background #ececec
.wrap
  width 100%
  #address
    width 100%
  .mui-input-row label
    font-size .4rem
  .title_info
    text-align: center;
    font-size: 0.45rem;
    width: 100%;
    height: 40px;
    line-height: 40px;
    background: #fff;
  .warn_info
    color red
    position: absolute;
    bottom: 2px;
  .form_wrap
    margin: 40px 0 0 0;
    background #fff
    font-size: .4rem;
    .cells_wrap
      padding: 0 .4rem;
      &>div:last-child
        border: 0;
      .cell_input
        padding: .4rem 0;
        border-bottom: 1px solid #dfdfdf;
        position: relative;
        overflow hidden
  .btn
    width: 90%;
    border: 0;
    text-decoration none
    background-color: #f67d48;
    color: #fff;
    padding: 15px 12px;
    border-radius: 4px;
    font-size 16px
    margin 10px auto
    text-align center
  .btn1
    background #ff4f4f
  .btn2
    background #ddd