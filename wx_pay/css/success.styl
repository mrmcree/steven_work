@import 'rider/initialize.styl'
@import 'rider/clockhand.styl'
@import 'rider/image.styl'
initialize()
$baseFontSize = 12; //默认基准font-size
$blue-color=#3bc4f5
rem(px)
  return px / $baseFontSize * 1rem
.wrap
    background: #f5f5f5
    height 100%
    .title
        text-align: center
        color green
        background: #fff
        padding: rem(5) 0
        font-size rem(5)
        display flex
        justify-content center
        i
            color green
            font-size rem(5)
            margin-right: 5px
            vertical-align: middle
    .info
        padding: 0 0.4rem
        margin-top: rem(5)
        background: #fff
        ul
            display flex
            color #083073
            flex-direction: column
            li
                margin rem(5) 0
            .price
                color red
    .footer
        padding  0 0.4rem
        .btn
            height rem(15)
            background: #fff
            text-align: center
            line-height: @height
            font-size rem(5)
            border-radius: 3px
            margin: rem(5) 0