@import 'rider/initialize.styl'
@import 'rider/clockhand.styl'
@import 'rider/image.styl'
initialize()
$baseFontSize = 12; //默认基准font-size
$blue-color=#3bc4f5
rem(px)
  return px / $baseFontSize * 1rem
body,html
    width 100%
    height 100%
.wrap
    padding: 0 0.4rem
    display flex
    height 100%
    flex-direction: column
    .input_item
        font-size: 16px
        input
            width 100%
            border-bottom:1px solid #ccc
            padding-top rem(20)
    .choice
        display flex
        flex:1
        flex-direction: column
        .choice_list
            display flex
            justify-content space-between
            flex-wrap: wrap
            .choice_item
                text-align: center
                flex-basis: 48%
                border-radius: 5px 
                font-size 25px
                height rem(20)
                color $blue-color
                line-height: @height
                margin 5px 0
                background: #fff
                border:1px solid $blue-color
                span
                    font-size 15px
            .is-active
                color #fff
                background: $blue-color
        .sub_title
            color $blue-color
            padding-top rem(10)
            padding-bottom rem(10)
            span
                color red
        .submit_btn
            color #fff
            background: $blue-color
            border-radius: 5px
            height 40px
            text-align: center
            line-height: @height
            font-size .4rem
        .log
            padding-top rem(5)
            color $blue-color
    .footer
        height 100px
        text-align: center
        letter-spacing: 0.5px
        p
            margin 5px
            color $blue-color
            span
                color #ccc


